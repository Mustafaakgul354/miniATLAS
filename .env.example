# LLM Configuration
LLM_PROVIDER=openai
# Options: openai | ollama | vllm
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o-mini

# Agent Settings
AGENT_MAX_STEPS=30
AGENT_STEP_TIMEOUT=30
# seconds per step
AGENT_TOTAL_TIMEOUT=300
# total seconds per session

# Browser Configuration
BROWSER=headless
# headless | headed
PROXY_URL=
# e.g., http://user:pass@host:port
USER_AGENT=
# empty uses Playwright default
TIMEZONE=Europe/Istanbul

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Optional Services
REDIS_URL=redis://localhost:6379/0
MONGO_URL=mongodb://localhost:27017
LOG_LEVEL=INFO
